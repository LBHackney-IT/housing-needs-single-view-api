{
  "name": "hn-single-view-api",
  "version": "1.0.0",
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "prettier": "^1.18.2",
    "serverless": "^1.60.5",
    "serverless-offline": "^5.12.1",
    "serverless-offline-ssm": "^4.1.2",
    "jest": "^24.9.0",
    "watch": "^1.0.2"
  },
  "scripts": {
    "start": "sls offline start -s dev --noAuth",
    "debug": "export SLS_DEBUG=* && node --inspect ./node_modules/serverless/bin/serverless offline -s dev --noAuth",
    "auth": "serverless invoke local -s dev -f hn-single-view-api-authorizer -p authorizer/event.json",
    "test": "jest --watch",
    "test-coverage": "jest --coverage",
    "lint": "eslint --fix --ext js api/lib && echo 'Lint complete.'"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "api/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/coverage/",
      "jest.config.js"
    ]
  }
}
