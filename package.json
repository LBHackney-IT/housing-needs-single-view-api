{
  "name": "hn-single-view-api",
  "version": "1.0.0",
  "dependencies": {
    "start-server-and-test": "^1.10.11",
    "serverless-apigwy-binary": "^1.0.0"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "serverless": "^1.60.5",
    "serverless-offline": "^5.12.1",
    "serverless-offline-ssm": "^4.1.2",
    "watch": "^1.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "api/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/coverage/",
      "jest.config.js"
    ]
  },
  "scripts": {
    "postinstall": "(cd api && echo 'Installing API node modules' && npm i); (cd authorizer && echo 'Installing Authorizer node modules' && npm i);",
    "start": "sls offline start -s dev --noAuth",
    "debug": "export SLS_DEBUG=* && node --inspect ./node_modules/serverless/bin/serverless offline -s dev --noAuth",
    "debug-test": "export SLS_DEBUG=* && node --inspect ./node_modules/serverless/bin/serverless offline -s test --port 3010 --noAuth",
    "auth": "serverless invoke local -s dev -f hn-single-view-api-authorizer -p authorizer/event.json",
    "unit-tests": "jest --testPathIgnorePatterns=api/test/integration --watch",
    "unit-tests-coverage": "jest --coverage --testPathIgnorePatterns=api/test/integration",
    "start-test": "sls offline start -s test --port 3010 --noAuth",
    "integration-tests": "jest --testPathPattern=api/test/integration",
    "integration-tests-local": "jest --testPathPattern=api/test/integration --watch",
    "ci-local": "start-server-and-test start-test http://localhost:3010/customers?firstName=jon integration-tests-local",
    "ci": "start-server-and-test start-test http://localhost:3010/customers?firstName=jon integration-tests",
    "lint": "eslint --fix --ext js api/lib && echo 'Lint complete.'"
  }
}
